<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //TODO remettre bien

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/AmeliorationNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom"
            android:layout_alignEnd="@id/Ammview"
            android:layout_alignParentStart="true" />

        <View
            android:id="@+id/Ammview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/NMb" />


        <Button
            android:id="@+id/NMb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NB"
            android:layout_alignEnd="@id/Ammview2" />

        <View
            android:id="@+id/Ammview2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_alignStart="@id/ammImageButton"

            />


        <ImageButton
            android:id="@+id/ammImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_alignEnd="@id/Ammview3"

            />

        <View
            android:id="@+id/Ammview3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignStart="@id/ammButton" />


        <Button
            android:id="@+id/ammButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cout"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>