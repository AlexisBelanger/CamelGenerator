            android:layout_alignRight="@id/view2"
            android:layout_toRightOf="@id/view2"
            android:layout_alignParentRight="true"

            android:layout_below="@id/button22"
            android:textSize="16dp"
            android:text="Participate in the Fortnite World Cup and win the prize pool.\n\nYou won 0 World Cups.\n\nEach World you win gives you 700 camels.\n\n\n\nCost : 5 000" />


