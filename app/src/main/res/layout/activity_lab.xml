        </View>

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/view4"
            android:layout_below="@id/button42"
            android:text="Patrick Balkany will steal Levallois Perret people's camels to give it to you.\n\n\nYou have 0 Patrick Balkany.\n\nEach Patrick Balkany will steal 10 000 camels.\n\n\nCost : 750 000" />
        p

